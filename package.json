{
  "name": "repository-template",
  "private": true,
  "description": "Custom repository template",
  "version": "0.0.0",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "github:user/repo"
  },
  "scripts": {
    "prepare": "husky",
    "version": "auto-changelog --package && git add CHANGELOG.md"
  },
  "devDependencies": {
    "husky": "*",
    "@commitlint/cli": "*",
    "@commitlint/config-conventional": "*",
    "semantic-release": "*",
    "@semantic-release/changelog": "*",
    "@semantic-release/git": "*",
    "conventional-changelog-conventionalcommits": "*",
    "auto-changelog": "*",
    "lint-staged": "*",
    "standard": "*"
  },
  "workspaces": ["frontend/*"]
}
